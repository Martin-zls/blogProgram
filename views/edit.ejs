<%- include header %>

<form method="post">
    标题：<br/>
    <input type="text" name="title" value="<%= post.title %>"/><br/>
    标签：<br/>
    <% var tags = '' %>
    <%
    for (var i = 0, len = post.tags.length; i < len; i++) {
        tags += post.tags[i];
        if (i < len - 1) {
            tags += '、';
        }

    }
    %>
    <input type="text" name="tags" value="<%= tags %>"/><br/>

    正文：<br/>
    <textarea name="post" rows="20" cols="100"><%= post.post %></textarea><br/>
    <input type="submit" value="保存修改"/>
</form>

<%- include footer %>